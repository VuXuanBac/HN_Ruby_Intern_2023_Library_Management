<header>
  <nav class="navbar navbar-expand-lg py-3 border-bottom">
    <div class="container">
      <%= link_to "LIBMA", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarMain">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item"><%= link_to t("home"), root_path, class: "nav-link", "aria-current": "page" %></li>
          <li class="nav-item"><%= link_to t("library"), library_path, class: "nav-link" %></li>
          <% if logged_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%= t "account" %>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("profile"), current_account, class: "dropdown-item" %></li>
                <li><%= link_to t("settings"), "#", class: "dropdown-item" %></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= link_to t("log_out"), logout_path, data: { "turbo-method": :delete }, class: "dropdown-item" %></li>
              </ul>
            </li>
          <% else %>
            <li class="nav-item"><%= link_to t("log_in"), login_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to t("sign_up"), signup_path, class: "nav-link" %></li>
          <% end %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= t "languages" %>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><%= link_to t("english"), locale: "en" %></li>
              <li><%= link_to t("vietnamese"), locale: "vi" %></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

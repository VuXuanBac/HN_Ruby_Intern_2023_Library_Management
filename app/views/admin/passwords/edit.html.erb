<% provide :title, t(".title") %>
<div class="card card-main col-lg-4 mx-auto">
  <div class="card-body px-5 py-5">
    <%= link_to t("admin.misc.back_login"), new_admin_account_session_path, class: "btn btn-info mb-3" %>
    <h3 class="card-title text-left mb-3"><%= t ".title" %></h3>
    <%= form_with scope: resource_name,
                  url: admin_account_password_path,
                  local: true, method: :put do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.label :password, t(".new_password") %>
        <%= f.password_field :password, autofocus: true, placeholder: t(".new_password"), class: "form-control p_input" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, t(".new_password_confirmation") %>
        <%= f.password_field :password_confirmation, placeholder: t(".new_password_confirmation"), class: "form-control p_input" %>
      </div>
      <div class="text-center">
        <%= f.submit t(".change_my_password"), name: :update, class: "btn btn-primary btn-block enter-btn" %>
      </div>
    <% end %>
  </div>
</div>

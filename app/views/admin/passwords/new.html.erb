<% provide :title, t(".title") %>
<div class="card card-main col-lg-4 mx-auto">
  <div class="card-body px-5 py-5">
    <%= link_to t("admin.misc.back_login"), new_admin_account_session_path, class: "btn btn-info mb-3" %>
    <h3 class="card-title text-left mb-3"><%= t ".title" %></h3>
    <%= form_with scope: resource_name, url: admin_account_password_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: t(".email_placeholder"), class: "form-control p_input" %>
      </div>
      <div class="text-center">
        <%= f.submit t(".send_password_reset_email"), name: :reset, class: "btn btn-primary btn-block enter-btn" %>
      </div>
    <% end %>
  </div>
</div>

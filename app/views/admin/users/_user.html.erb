<% get_info(user) => {full_name:, email:, user_path:, join_about:, phone:, dob:} %>
<% null = Settings.display_for_nil %>
<tr>
  <td title="<%= email %>">
    <%= render "admin/shared/profile", user:, link: user_path, username_class: "ps-3" %>
  </td>
  <td><%= link_to_if full_name, full_name || null, user_path %></td>
  <td><%= phone || null %></td>
  <td><%= dob || null %></td>
  <td><%= join_about || null %></td>
  <td>
    <%= render "status_button", user: %>
  </td>
</tr>

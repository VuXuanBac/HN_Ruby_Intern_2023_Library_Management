<% provide :title, t(".title") %>
<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= t(".title") %></h4>
      <div class="d-flex justify-content-between flex-row">
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
        <%== pagy_items_selector_js(@pagy) %>
      </div>
      <div class="table-responsive">
        <table class="table sortable-table" id="users-table" data-toggle="bootstrap-table">
          <thead>
            <tr>
              <th class="sortStyle"><%= t "users.account" %></th>
              <th class="sortStyle"><%= t "users.full_name" %></th>
              <th class="sortStyle"><%= t "users.phone" %></th>
              <th class="sortStyle"><%= t "users.dob" %></th>
              <th class="sortStyle"><%= t "users.join_from" %></th>
              <th class="sortStyle"><%= t "users.status" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "user", collection: @users %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

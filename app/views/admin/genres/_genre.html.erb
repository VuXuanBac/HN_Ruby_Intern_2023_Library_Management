<% populate_genre(genre) => {name:, description:, genre_path:, id:}%>
<% null = Settings.display_for_nil %>
<tr id="<%= id %>">
  <td><%= link_to name, genre_path, title: name %></td>
  <td><%= description || null %></td>
  <td>
    <%= render "admin/shared/form_button", item: genre, name: t("genres._name") %>
  </td>
</tr>

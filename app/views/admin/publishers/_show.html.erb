<% provide :title, t("admin.title.show", name: t("publishers._name")) %>
<% populate_publisher(@publisher) => {name:, address:, email:, about:}%>
<div class="col-12">
  <%= navigate_to %>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-4">
          <div class="border-bottom text-center pb-4">
            <div class="py-4">
            </div>
          </div>
          <!-- Contact -->
          <div class="py-4">
            <%= render("admin/shared/info_field", name: t("publishers.email"), value: email) if email %>
            <%= render("admin/shared/info_field", name: t("publishers.address"), value: address) if address %>
            <%= render "admin/shared/timestamp", object: @publisher %>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="d-flex justify-content-between">
            <div class="pb-4">
              <h3><%= name %></h3>
              <span class="text-description"><%= about %></span>
            </div>
            <div class="w-25">
              <%= render "admin/shared/form_button", item: @publisher,
                          name: :publisher, row: true %>
            </div>
          </div>
          <div class="mt-4 py-2">
            <ul class="nav nav-pills nav-pills-secondary" id="publisher-tab" role="tablist">
              <%= render  partial: "admin/shared/tab_header_item",
                          collection: get_publisher_tab_headers(@publisher), as: :item %>
            </ul>
            <div class="tab-content" id="publisher-tabContent">
              <div  class="tab-pane fade show active"
                    id="<%= @tab_id %>" role="tabpanel"
                    aria-labelledby="<%= @tab_id %>-tab">
                <%= yield :tab_content %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

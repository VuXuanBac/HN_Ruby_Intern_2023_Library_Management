<% provide :title, t("admin.title.show", name: t("publishers._name")) %>
<% populate_publisher(@publisher) => {name:, address:, email:, about:}%>
<div class="col-12">
  <%= render "admin/shared/back_button", path: admin_publishers_path %>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-4">
          <div class="border-bottom text-center pb-4">
            <div class="py-4">
            </div>
          </div>
          <!-- Contact -->
          <div class="py-4">
            <%= render("admin/shared/info_field", name: t("publishers.email"), value: email) if email %>
            <%= render("admin/shared/info_field", name: t("publishers.address"), value: address) if address %>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="d-flex justify-content-between">
            <h3><%= name %></h3>
            <div>
              <%#= render "status_button", user: @user, flip: false %>
            </div>
          </div>
          <span><%= about %></span>
          <div class="mt-4 py-2">
            <%= render_publishers_tabs %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

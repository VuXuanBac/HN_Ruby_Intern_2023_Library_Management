<% populate_publisher(publisher) => {
  name:, email:, address:, about:, publisher_path:, id:, updated_at:
}%>
<% null = Settings.display_for_nil %>
<tr id="<%= id %>">
  <td><%= @pagy.from + publisher_iteration.index %></td>
  <td><%= link_to name, publisher_path, title: about %></td>
  <td><%= email.presence || null %></td>
  <td class="long-name"><%= address.presence || null %></td>
  <td><%= updated_at %></td>
  <td>
    <%= render "admin/shared/form_button", item: publisher, name: t("publishers._item") %>
  </td>
</tr>

<% provide :title, t(".title") %>
<div class="card col-lg-4 mx-auto">
  <div class="card-body px-5 py-5">
    <h3 class="card-title text-left mb-3"><%= t ".title" %></h3>
    <%= render "admin/shared/notify" %>
    <%= form_with url: admin_login_path, scope: :session, local: true do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control p_input" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control p_input" %>
      </div>
      <div class="form-group d-flex align-items-center justify-content-between">
        <div class="form-check">
          <%= f.label :remember_me, class: "form-check-label" do %>
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= t ".rememberme" %>
          <% end %>
        </div>
        <%= link_to t(".forgot_pwd"), "#", class: "forgot-pass" %>
      </div>
      <div class="text-center">
        <%= f.submit t(".login"), class: "btn btn-primary btn-block enter-btn" %>
      </div>
    <% end %>
  </div>
</div>

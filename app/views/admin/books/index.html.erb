<% provide :title, t(".title") %>
<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= t(".title") %></h4>
      <div class="d-flex justify-content-between flex-row">
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
        <%== pagy_items_selector_js(@pagy) %>
      </div>
      <div class="table-responsive">
        <table class="table sortable-table" id="books-table" data-toggle="bootstrap-table">
          <thead>
            <tr>
              <th class="sortStyle"><%= t "books.title" %></th>
              <th class="sortStyle"><%= t "books.amount" %></th>
              <th class=""><%= t "authors._name" %></th>
              <th class=""><%= t "genres._name" %></th>
              <th class="sortStyle"><%= t "publishers._name" %></th>
              <th class="sortStyle"><%= t "books.publish_date" %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "book", collection: @books %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

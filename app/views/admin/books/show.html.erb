<% provide :title, t("admin.title.show", name: t("books._name")) %>
<% populate_book(@book) => {cover:, title:, description:}%>
<div class="col-12">
  <%= render "admin/shared/back_button", path: admin_books_path %>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-4 order-2 order-lg-0">
          <div class="border-bottom text-center pb-4">
            <%= image_tag cover, class: "cover-rect" %>
          </div>
          <div class="py-4">
            <span><%= description %></span>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="d-flex justify-content-between">
            <h3><%= title %></h3>
            <div>
              <%#= render "status_button", user: @user, flip: false %>
            </div>
          </div>
          <div class="mt-4 py-2">
            <%= render_books_tabs %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

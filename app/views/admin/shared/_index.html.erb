<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= yield :title %></h4>
      <div class="d-flex flex-column">
        <%= render "admin/shared/table_utils", pagy: @pagy %>
      </div>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <%= yield :table_header %>
          </thead>
          <tbody>
            <%= yield :table_body %>
          </tbody>
        </table>
        <% unless content_for? :table_body %>
          <div class="text-muted ps-3 pt-2"><%= yield :table_empty %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

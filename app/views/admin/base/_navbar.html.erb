      <li class="d-none d-lg-inline">
        <%= debug params %>
      </li>
      <li class="nav-item dropdown d-none d-lg-block">
        <%= render "dropdown_button", id: "createbtns",
                    button_class: "nav-link btn btn-success px-2" do %>
          <span class="fs-6">+ <%= t("admin.misc.create") %></span>
        <% end %>
        <%= render "dropdown_menu", id: "createbtns", pos: :right,
                    menu_class: "navbar-dropdown" do %>
          <%= render "dropdown_item", link: new_admin_book_path, icon: "book",
                      title: t("books._name") unless current_page?(new_admin_book_path) %>
          <%= render "dropdown_item", link: new_admin_author_path, icon: "account",
                      title: t("authors._name") unless current_page?(new_admin_author_path) %>

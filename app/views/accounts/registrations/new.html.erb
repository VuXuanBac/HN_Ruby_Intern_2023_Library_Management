<% provide :title, t("sign_up") %>

<div class="mx-auto auth-form">
  <h1><%= t "sign_up" %></h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label required" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <%= render "shared/error_messages", resource:, field: :email %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label required" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <%= render "shared/error_messages", resource:, field: :password %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label required" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      <%= render "shared/error_messages", resource:, field: :password_confirmation %>
    </div>

    <div class="mb-3">
      <%= f.label :username, class: "form-label required" %>
      <%= f.text_field :username, class: "form-control" %>
      <%= render "shared/error_messages", resource:, field: :username %>
    </div>

    <div class="mb-3">
      <%= f.submit t("create_account"), class: "btn btn-primary form-control" %>
    </div>
  <% end %>
  <p><%= t ".have_account" %> <%= link_to t(".sign_in_now"), new_account_session_path %></p>
</div>

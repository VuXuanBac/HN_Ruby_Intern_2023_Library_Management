<div class="mb-5">
  <h2 class="fw-semibold mb-4"><%= title %></h2>
  <div class="container text-center my-3">
    <div class="row mx-auto my-auto justify-content-center">
      <div id="recipeCarousel_<%= books.object_id %>" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner" role="listbox">
          <% books.each_with_index do |book, index| %>
            <div class="carousel-item <%= "active" if index.zero? %>">
              <div class="col-md-3">
                <div class="mx-4 h-100"><%= render "shared/book_card", book: book %></div>
              </div>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev bg-transparent w-aut" href="#recipeCarousel_<%= books.object_id %>" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next bg-transparent w-aut" href="#recipeCarousel_<%= books.object_id %>" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
      </div>
    </div>
  </div>
</div>
